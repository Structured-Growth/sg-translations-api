{
  "name": "@structured-growth/api-service-starter-kit",
  "version": "1.0.0",
  "description": "",
  "main": ".dist/src/api",
  "bin": ".dist/src/cli",
  "scripts": {
    "prepare": "husky install && cp -n .env.example .env 2>/dev/null || :",
    "start": "node .dist/src/cli",
    "test": "mocha",
    "build": "tsc && npm run after-build",
    "after-build": "cp .sequelizerc .dist/.sequelizerc",
    "build-docker": "docker build --build-arg github_token=$GITHUB_TOKEN --platform linux/amd64 -t structured-growth/api-service-starter-kit:latest .",
    "dev": "nodemon src/cli.ts web",
    "dev-cli": "ts-node src/cli.ts",
    "dev-link-sdk": "npm link @structured-growth/microservice-sdk",
    "routes": "npm run routes.v1",
    "routes.v1": "tsoa routes -c tsoa.v1.json",
    "docs": "npm run apidocs.v1 && npm run redoc.v1",
    "apidocs.v1": "npm run dev-cli docs",
    "redoc.v1": "redocly build-docs -o .docs/openapi.v1/index.html .docs/openapi.v1/swagger.json"
  },
  "engines": {
    "node": "~20"
  },
  "author": "Structured Growth",
  "license": "Commercial",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Structured-Growth/api-service-starter-kit.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "files": [
    ".dist",
    ".docs",
    "readme.md"
  ],
  "dependencies": {
    "@structured-growth/microservice-sdk": "1.8.9",
    "aws-sdk": "^2.1534.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "hyperid": "^3.1.1",
    "joi": "^17.12.0",
    "lodash": "^4.17.21",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.2.1",
    "sequelize": "^6.35.2",
    "sequelize-cli": "^6.6.2",
    "sequelize-typescript": "^2.1.6",
    "serverless-http": "^3.2.0",
    "sqs-consumer": "^8.1.3",
    "tsoa": "^6.0.0",
    "umzug": "^3.7.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@codedependant/semantic-release-docker": "^4.5.0",
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@redocly/cli": "^1.6.0",
    "@types/aws-lambda": "^8.10.131",
    "@types/chai": "^4.3.11",
    "@types/express": "^4.17.21",
    "@types/joi": "^17.2.3",
    "@types/lodash": "^4.14.202",
    "@types/mocha": "^10.0.6",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "chai": "^4.4.1",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^2.8.8",
    "semantic-release": "^23.0.0",
    "sequelize-typescript-generator": "^11.0.6",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "prettier": {
    "useTabs": true,
    "trailingComma": "es5",
    "printWidth": 120
  }
}
